<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<svg viewBox="0 0 480 640"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:html="http://www.w3.org/1999/xhtml"
>
  <defs><style>
    p { text-align: center; font-size: 40pt; }
    .title { font-size: 50pt }
    .author { font-style: italic }
    .background { fill: white; fill-opacity: 0.75; }
    .color { animation: colorchange 5s infinite; stroke: black; }
    @keyframes colorchange {
      0%   { fill: rgba(255, 0, 0, 0.1) }
      25%  { fill: rgba(255, 255, 0, 0.1) }
      50%  { fill: rgba(0, 0, 255, 0.1) }
      75%  { fill: rgba(0, 255, 0, 0.1) }
      100% { fill: rgba(255, 0, 0, 0.1) }
    }
  </style></defs>
  <rect class='background' x='0' y='0' width='100%' height='100%'/>
  <rect class='color' x='0' y='0' width='100%' height='100%'/>
  <foreignObject x='0' y='5%' height="300" width="480">
    <html:p class='title'><%= @title %></html:p>
  </foreignObject>
  <foreignObject x='0' y='50%' height="200" width="480">
    <html:p class='author'>by <%= @author %></html:p>
  </foreignObject>
</svg>