<%#= react_component('Index', {name: 'Test'}) %>
<ol>
  <% @contexts.each do |c| %>
    <li><%= link_to c.name, "#{@path && "/#{@path}"}/../../#{c.name}" %></li>
  <% end %>
</ol>
<ol>
  <% @subcontexts.each do |c| %>
    <li><%= link_to c.name, "#{@path && "/#{@path}"}/#{c.name}" %></li>
  <% end %>
</ol>
<table>
  <tr><th>Index</th><th>Title</th><th>Author</th></tr>
  <% @books.each.with_index(1) do |b, i| %><tr>
    <td><%= i %></td>
    <td>
      <% if b.content&.ipfs_id %>
        <%= link_to(b.title, "/view/#{b.uuid}") %>
      <% else %>
        <%= b.title.html_safe %>
      <% end %>
    </td>
    <td><%= b.author %></td>
  </tr><% end %>
</table>